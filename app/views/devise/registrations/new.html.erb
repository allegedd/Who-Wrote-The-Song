<% content_for :layout_class, "full-screen" %>
<div class="fixed inset-0 bg-gray-950 flex items-center justify-center pt-16">
  <div class="w-full max-w-sm mx-auto px-4">
    <div class="text-center mb-8">
      <h2 class="text-2xl font-semibold text-gray-100"><%= t('devise.shared.links.sign_up') %></h2>
    </div>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="space-y-3">
        <div>
          <%= f.text_field :username, autofocus: true, autocomplete: "username",
              class: "w-full px-4 py-3 bg-gray-900 border border-gray-700 rounded-lg focus:outline-none focus:border-green-500 transition-colors text-gray-100 placeholder-gray-500",
              placeholder: t('helpers.placeholder.user.username') %>
        </div>

        <div>
          <%= f.email_field :email, autocomplete: "email",
              class: "w-full px-4 py-3 bg-gray-900 border border-gray-700 rounded-lg focus:outline-none focus:border-green-500 transition-colors text-gray-100 placeholder-gray-500",
              placeholder: t('helpers.placeholder.user.email') %>
        </div>

        <div>
          <%= f.password_field :password, autocomplete: "new-password",
              class: "w-full px-4 py-3 bg-gray-900 border border-gray-700 rounded-lg focus:outline-none focus:border-green-500 transition-colors text-gray-100 placeholder-gray-500",
              placeholder: t('helpers.placeholder.user.password') %>
          <% if @minimum_password_length %>
            <p class="mt-1 text-xs text-gray-400"><%= t('devise.password_hint', count: @minimum_password_length) %></p>
          <% end %>
        </div>

        <div>
          <%= f.password_field :password_confirmation, autocomplete: "new-password",
              class: "w-full px-4 py-3 bg-gray-900 border border-gray-700 rounded-lg focus:outline-none focus:border-green-500 transition-colors text-gray-100 placeholder-gray-500",
              placeholder: t('helpers.placeholder.user.password_confirmation') %>
        </div>
      </div>

      <div class="pt-2">
        <%= f.submit t('helpers.submit.user.create'), class: "w-full bg-green-600 hover:bg-green-700 text-white font-medium py-3 px-4 rounded-lg transition-colors duration-200" %>
      </div>
    <% end %>

    <div class="mt-6 text-center text-sm">
      <span class="text-gray-400"><%= t('devise.sessions.new.sign_in_prompt') %></span>
      <%= link_to t('devise.shared.links.sign_in'), new_user_session_path, class: "text-green-600 hover:text-green-500 font-medium ml-1" %>
    </div>
  </div>
</div>
