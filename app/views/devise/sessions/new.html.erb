<% content_for :layout_class, "full-screen" %>
<div class="fixed inset-0 bg-gray-950 flex items-center justify-center pt-16">
  <div class="w-full max-w-sm mx-auto px-4">
    <div class="text-center mb-8">
      <h2 class="text-2xl font-semibold text-gray-100"><%= t('devise.shared.links.sign_in') %></h2>
    </div>
    
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
      <div class="space-y-3">
        <div>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "w-full px-4 py-3 bg-gray-900 border border-gray-700 rounded-lg focus:outline-none focus:border-green-500 transition-colors text-gray-100 placeholder-gray-500",
              placeholder: t('helpers.placeholder.user.email') %>
        </div>

        <div>
          <%= f.password_field :password, autocomplete: "current-password",
              class: "w-full px-4 py-3 bg-gray-900 border border-gray-700 rounded-lg focus:outline-none focus:border-green-500 transition-colors text-gray-100 placeholder-gray-500",
              placeholder: t('helpers.placeholder.user.password') %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center">
            <%= f.check_box :remember_me, class: "h-4 w-4 text-green-600 focus:ring-green-500 border-gray-300 rounded" %>
            <%= f.label :remember_me, t('activerecord.attributes.user.remember_me'), class: "ml-2 text-sm text-gray-300" %>
          </div>
        <% end %>
      </div>

      <div class="pt-2">
        <%= f.submit t('helpers.submit.session.create'), class: "w-full bg-green-600 hover:bg-green-700 text-white font-medium py-3 px-4 rounded-lg transition-colors duration-200" %>
      </div>
    <% end %>

    <div class="mt-6 text-center text-sm">
      <span class="text-gray-400"><%= t('devise.registrations.new.sign_up_prompt', default: 'アカウントをお持ちでない場合は') %></span>
      <%= link_to t('devise.shared.links.sign_up'), new_user_registration_path, class: "text-green-600 hover:text-green-500 font-medium ml-1" %>
    </div>
    
    <div class="mt-3 text-center">
      <%= link_to t('devise.shared.links.forgot_password'), new_user_password_path, class: "text-sm text-gray-500 hover:text-gray-300" %>
    </div>
  </div>
</div>
