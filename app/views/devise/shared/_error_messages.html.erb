<% if resource.errors.any? %>
  <div id="error_explanation" data-turbo-cache="false" class="mb-4 bg-gray-900 border border-red-500 rounded-lg p-4 bg-opacity-80 backdrop-blur-sm">
    <div class="flex items-start">
      <div class="flex-shrink-0">
        <span class="text-red-400 text-lg font-bold">âš </span>
      </div>
      <div class="ml-3 flex-1">
        <ul class="space-y-1 text-sm text-gray-300">
          <% resource.errors.full_messages.each do |message| %>
            <li class="flex items-center">
              <span class="w-1 h-1 bg-red-400 rounded-full mr-2 flex-shrink-0"></span>
              <%= message %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>
