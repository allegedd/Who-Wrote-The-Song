<div class="space-y-2">
  <%- if controller_name != 'sessions' %>
    <%= link_to "ログイン", new_session_path(resource_name), class: "text-green-600 hover:text-green-500 font-medium" %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "アカウント登録", new_registration_path(resource_name), class: "text-green-600 hover:text-green-500 font-medium" %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <br><%= link_to "パスワードを忘れた方", new_password_path(resource_name), class: "text-sm text-gray-600 hover:text-gray-500" %>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <br><%= link_to "確認メールを再送信", new_confirmation_path(resource_name), class: "text-sm text-gray-600 hover:text-gray-500" %>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <br><%= link_to "アカウントロック解除", new_unlock_path(resource_name), class: "text-sm text-gray-600 hover:text-gray-500" %>
  <% end %>
</div>
