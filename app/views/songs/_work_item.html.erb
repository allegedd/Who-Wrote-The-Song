<div class="bg-gray-800 rounded-lg p-4 work-item" data-original="true">
  <div class="flex justify-between items-start mb-2">
    <h3 class="font-medium text-gray-100 flex-1"><%= work.title %></h3>
    <% if local_assigns[:show_preview] != false %>
      <button class="preview-btn ml-3 p-2 bg-gray-700 hover:bg-gray-600 text-white rounded-full transition-colors"
              data-title="<%= work.title %>"
              data-artist="<%= work.artist %>"
              title="再生">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
          <path d="M8 5v14l11-7z"/>
        </svg>
      </button>
    <% end %>
  </div>
  <p class="text-sm text-gray-400 mb-2" data-artist-info="<%= work.id %>">
    アーティスト: 
    <% if work.loading_artist || work.artist.blank? %>
      <span class="artist-loading loading-spinner"></span>
      <span class="artist-name hidden"><%= work.artist %></span>
    <% else %>
      <span class="text-gray-300 artist-name"><%= work.artist %></span>
    <% end %>
  </p>
  <% if work.creator_names.present? %>
    <p class="text-sm text-gray-400">
      <%= work.creator_names %>
    </p>
  <% end %>
</div>