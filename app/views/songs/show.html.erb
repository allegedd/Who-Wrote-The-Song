  }
  
  // ãƒ—ãƒ¬ã‚¤ãƒ¤ãƒ¼ã®æº–å‚™å®Œäº†
  function onPlayerReady(event) {
    console.log('YouTube Player ready');
    isPlayerReady = true;
    setupPlayerControls();
    collectWorkItems(); // work_itemã®ãƒªã‚¹ãƒˆã‚’åé›†
  }
  
  // ãƒ—ãƒ¬ã‚¤ãƒ¤ãƒ¼ã®çŠ¶æ…‹å¤‰æ›´
  function onPlayerStateChange(event) {
    console.log('Player state changed:', event.data);
    
    if (event.data === YT.PlayerState.PLAYING) {
      isPlaying = true;
      updatePlayPauseButton();
      updateWorkItemButtonStates();
      startProgressUpdater();
      updateCurrentTrackUI();
      
      // ãƒ•ãƒ­ãƒ¼ãƒ†ã‚£ãƒ³ã‚°ã‚¦ã‚¤ãƒ³ãƒ‰ã‚¦ã®ã‚µãƒ ãƒã‚¤ãƒ«è¡¨ç¤ºã‚’æ›´æ–°
      updateFloatingThumbnail();
    } else if (event.data === YT.PlayerState.PAUSED) {
      isPlaying = false;
      updatePlayPauseButton();
      updateWorkItemButtonStates();
      stopProgressUpdater();
    } else if (event.data === YT.PlayerState.ENDED) {
      isPlaying = false;
      updatePlayPauseButton();
      updateWorkItemButtonStates();
      stopProgressUpdater();
      playNext(); // è‡ªå‹•çš„ã«æ¬¡ã®æ›²ã¸
    }
  }
  
  // ãƒ•ãƒ­ãƒ¼ãƒ†ã‚£ãƒ³ã‚°ã‚¦ã‚¤ãƒ³ãƒ‰ã‚¦ã®ã‚µãƒ ãƒã‚¤ãƒ«è¡¨ç¤ºã‚’æ›´æ–°
  function updateFloatingThumbnail() {
    if (!isPlayerReady || !youtubePlayer) {
      return;
    }
    
    try {
      const currentVideoUrl = youtubePlayer.getVideoUrl();
      const currentVideoId = currentVideoUrl.split('v=')[1]?.split('&')[0];
      
